{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "../../dist/out-tsc",
    "types": [],
    "target": "ES2022",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": false,
    "esModuleInterop": true
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "jest.config.ts"]
}
