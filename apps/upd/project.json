{
  "name": "upd",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/upd/src",
  "prefix": "upd",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/upd",
        "index": "apps/upd/index.html",
        "main": "apps/upd/src/main.ts",
        "polyfills": "apps/upd/src/polyfills.ts",
        "tsConfig": "apps/upd/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/upd/src/favicon.ico", "apps/upd/src/assets"],
        "styles": ["apps/upd/src/styles.scss"],
        "scripts": [],
        "vendorChunk": true,
        "verbose": true,
        "configFile": "apps/upd/vite.config.mts",
        "logLevel": "info"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "2.5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/upd/src/environments/environment.ts",
              "with": "apps/upd/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all",
          "statsJson": true,
          "buildLibsFromSource": true
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": {
            "scripts": true,
            "styles": true,
            "vendor": true
          },
          "namedChunks": true,
          "verbose": true,
          "buildLibsFromSource": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "configurations": {
        "development": {
          "buildTarget": "upd:build:development",
          "hmr": true,
          "clearScreen": false,
          "mode": "development",
          "watch": true,
          "logLevel": "info"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "upd:build:development",
        "configFile": "apps/upd/vite.config.mts"
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "upd:build:production",
        "configFile": "apps/upd/vite.config.mts",
        "mode": "production",
        "watch": true
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "upd:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/upd/src/**/*.ts", "apps/upd/src/**/*.html"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/upd"],
      "options": {
        "jestConfig": "apps/upd/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "compodoc": {
      "executor": "@twittwer/compodoc:compodoc",
      "options": {
        "tsConfig": "apps/upd/tsconfig.compodoc.json",
        "outputPath": "dist/compodoc/upd",
        "workspaceDocs": true
      },
      "configurations": {
        "json": {
          "exportFormat": "json"
        }
      }
    }
  },
  "tags": []
}
